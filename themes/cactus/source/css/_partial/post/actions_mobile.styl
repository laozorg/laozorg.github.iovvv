
#footer-post
  position: fixed
  right: 0
  bottom: 0
  left: 0
  z-index: 5000000
  width: 100%
  border-top: 1px solid var(--color-border)
  background: var(--color-footer-mobile-1)
  transition: opacity .2s

  a
    background: none
    color: inherit
    text-decoration: none

  a.icon
    background: none

    &:hover
      color: var(--color-link)

  #nav-footer
    padding-right: 1rem
    padding-left: 1rem
    background: var(--color-footer-mobile-2)
    text-align: center

    a
      color: var(--color-accent-1)
      font-size: 1em

    a:hover
      underline(5px, var(--color-accent-1))

    ul
      display: table
      margin: 0
      padding: 0
      width: 100%
      list-style-type: none

      li
        display: inline-table
        padding: 10px
        width: 20%
        vertical-align: middle
  
.footer-post-dark-mode
    background: lighten(#1d1f21, 2%) !important

.footer-post-dark-mode2
    background: lighten(#1d1f21, 10%) !important

  #actions-footer
    overflow: auto
    margin-top: 1rem
    margin-bottom: 1rem
    padding-right: 1rem
    padding-left: 1rem
    width: 100%
    text-align: center
    white-space: nowrap

    a
      display: inline-block
      padding-left: 1rem
      color: var(--color-accent-1)

  #share-footer
    padding-right: 1rem
    padding-left: 1rem
    background: var(--color-footer-mobile-2)
    text-align: center

    ul
      display: table
      margin: 0
      padding: 0
      width: 100%
      list-style-type: none

      li
        display: inline-table
        padding: 10px
        width: 20%
        vertical-align: middle

  #toc-footer
    clear: both
    padding-top: 1rem
    padding-bottom: 1rem
    background: var(--color-footer-mobile-2)
    text-align: left

    ol
      margin: 0
      padding-left: 20px
      list-style-type: none

      li
        line-height: 30px

    a:hover
      color: var(--color-link)

    .toc-level-1 > .toc-link
      display: none

    .toc-level-2
      color: var(--color-text)
      font-size: .8rem

      &:before
        color: var(--color-accent-1)
        content: "#"

    .toc-level-3
      color: var(--color-meta)
      font-size: .7rem
      line-height: 15px

    .toc-level-4
      display: none

    .toc-level-5
      display: none

    .toc-level-6
      display: none

    .toc-number
      display: none

@media screen and (min-width: 500px)
  #footer-post-container
    display: none
